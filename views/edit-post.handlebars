<article>
    <a href="./dashboard.handlebars"> &larr; Go back to the dashboard</a>
    <h2>
        Edit Post
    </h2>
    <form class="edit-post-form">
        <div>
            <label for="post-title">Post Title:</label>
            <input class="input" name="post-content" type="text" value="{{post.title}}" />
        </div>
        <div>
            <label for="post-content">Post:</label>
            <input class="text-area" name="post-content" type="text" value="{{post.post_content}}" />
        </div>
        <div>
            created by you on {{format_date post.created_at}}
            |
        <!--double check... not sure if its connected to the right place-->
            <a href="../controllers/api/post-routes.js/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>    
        <!--save post-->
        <button type="submit">Save</button>
        <!--delete post-->
        <button type="button" class="delete-post-btn">Delete</button>
    </form>
</article>

<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">Comment</button>
    </div>
</form>

{{> comments post.comments}}

<script src="../public/javascript/edit-post.js"></script>
<script src="../public/javascript/delete-post.js"></script>
<script src="../public/javascript/comment.js"></script>