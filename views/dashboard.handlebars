<section class="row mx-auto">
    <h2>Create a new post</h2>

    <form class="new-post-form">
        <div class="m-3">
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div class="m-3">
            <label for="post-text">Body</label>
            <input id="post-text" name="post-text" />
        </div>
        <button type="submit" class="btn text-light border m-2">Create</button>
    </form>
</section>

{{#if posts.length}}
<section>
    <h2 class="m-3">Your Posts</h2>
    <div>
        {{#each posts as |post|}}
        <div class="border rounded m-3 p-3">
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="btn text-light border rounded">Edit post</a>
        </div>
        {{/each}}
    </div>
</section>
{{/if}}

<script src="../public/javascript/add-post.js"></script>